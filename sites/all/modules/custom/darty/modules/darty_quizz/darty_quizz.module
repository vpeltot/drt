  if (isset($obj_reponse4) && isset($obj_reponse4->scald_thumbnail[LANGUAGE_NONE][0])) {
    $img_reponse4['uri'] = file_create_url($obj_reponse4->scald_thumbnail[LANGUAGE_NONE][0]['uri']);
