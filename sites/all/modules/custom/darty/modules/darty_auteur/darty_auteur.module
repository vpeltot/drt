function darty_auteur_menu() {
    $items['auteur/%/%/%'] = array(
        'title' => 'ajax callback content',
        'page callback' => 'rss_auteur_view',
        'page arguments' => array(1, 2, 3),
        'access callback' => TRUE,
        'delivery callback' => 'rss_auteur_deliver',
        'type' => MENU_CALLBACK,
